<Accordion as |openIndexes onItemClick|>

  {{#each @items key='title' as |item index|}}
  
    <Item style='grid-auto-flow: column;'>
      <Contents 
        style='
          overflow-y: hidden; 
          text-align: justify;
          {{if (contains index openIndexes) 'max-height: 130px'}}
        '>
        {{item.contents}}
      </Contents>

      <Button 
        style='text-align: left; min-width: 80px;'
        class={{if (contains index openIndexes) 'is-open'}}
        @onClick={{action onItemClick index}}
      >
        <span>{{if (contains index openIndexes) 'ğŸ‘ˆ' 'ğŸ‘‰'}}</span>

        {{item.title}}
      </Button>

    </Item>

  {{/each}}

</Accordion>